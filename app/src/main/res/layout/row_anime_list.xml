<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/sampulRl"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginEnd="5dp"
            android:background="@color/gray3">
            <ImageView
                android:id="@+id/sampulTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_account_circle_black_24dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:text="Anime Title"
            android:layout_toEndOf="@id/sampulRl"
            android:layout_toStartOf="@id/moreBtn"
            android:maxLines="3" />
        <TextView
            android:id="@+id/seasonTv"
            android:layout_below="@id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:text="Seasons"
            android:layout_toEndOf="@id/sampulRl"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/typeTv"
            android:layout_below="@id/seasonTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:text="Type"
            android:layout_toEndOf="@id/sampulRl"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/airedTv"
            android:layout_below="@id/typeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/sampulRl"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:text="Aired"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/ratingTv"
            android:layout_below="@id/airedTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:text="Rating"
            android:layout_toEndOf="@id/sampulRl"
            android:maxLines="1"
            android:ellipsize="end"/>

        <ImageButton
            android:id="@+id/moreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:background="@android:color/transparent"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>